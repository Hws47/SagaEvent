    <div class="main">
        @using (Html.BeginForm("EditEventSave", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    <div class="login">
        <form id="login" action="" method="post">
            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event Name</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventName, new { @class = "form-control", @placeholder = "Event Name", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventName)</span>


            <br />
            <!--<h5 style="color:red;">ViewBag.msg</h5>
    <label for="uname"><b>Productname</b></label>-->
            @*@<input type="text" placeholder="Enter Username" name="uname" required>*@
            <!--<input type="file" name="file" />
    <span style="color:red">Html.ValidationMessageFor(x => x.proimage)</span>
    <br />-->
            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event Image</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventPhoto, new { @class = "form-control", @placeholder = "Event Image Address", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventPhoto)</span>
            <br />

            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event price</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventPrice, new { @class = "form-control", @placeholder = "Event price", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventPrice)</span>
            <br />

            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event Description</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventDescription, new { @class = "form-control", @placeholder = "Event Description", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventDescription)</span>
            <br />


            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event Type</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventType, new { @class = "form-control", @placeholder = "Event Type", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventType)</span>
            <br />


            <h5 style="color:red;">@ViewBag.msg</h5>
            <label for="uname"><b>Event Preparation Time</b></label>
            @*<input type="text" placeholder="Enter Username" name="uname" required>*@
            @Html.TextBoxFor(x => x.eventPreparationTime, new { @class = "form-control", @placeholder = "Event Preparation Time", @id = "Uname" })
            <span style="color:red">@Html.ValidationMessageFor(x => x.eventPreparationTime)</span>
            <br />


            <div class="row">
                <input type="submit" value="Save" id="log" class="btn btn-success" />
            </div>


            <div class="form-group">
                <p style="color:red">@ViewBag.error</p>
            </div>
            
        </form>
    </div>}
    </div>

    </div>
</body>

</html>
