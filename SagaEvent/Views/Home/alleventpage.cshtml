@model List<SagaEvent.Models.EVENT>
@using SagaEvent.Controllers

@{
    ViewBag.Title = "alleventpage";
}



<link href="~/Content/cardstyle.css" rel="stylesheet" />
<h4 style="text-align:center;text-decoration:underline;">All Events</h4>
<div class="container mx-auto mt-4">
    <div class="row">
        @foreach (var item in Model)
        {@Html.HiddenFor(x => @item.eventId)

        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src="~/Images/@item.eventPhoto" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.eventName</h5>
                    <h6 class="card-subtitle mb-2 ">Price: @item.eventPrice</h6>
                    <h6 class="card-subtitle mb-2 ">Event Type: @item.eventType</h6>
                    <h6 class="card-subtitle mb-2 ">Event Preparation Time: @item.eventPreparationTime</h6>
                    <br />

                    <p class="card-text">@item.eventDescription</p>
                    <a href="#" class="btn mr-2"><i class="fas fa-link"></i>Book Now!</a>
                    
                </div>
            </div>
        </div>


    }
    </div>
</div>
